{
  "name": "@artcom/mqtt-topping-react",
  "version": "3.0.0-beta.0",
  "description": "Modern React hooks for mqtt-topping with TypeScript support and TanStack Query integration.",
  "type": "module",
  "files": [
    "dist/",
    "src/"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/artcom/mqtt-topping-react.git"
  },
  "license": "MIT",
  "keywords": [
    "mqtt",
    "json",
    "http",
    "react",
    "hooks",
    "typescript",
    "tanstack-query"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "clean": "rimraf dist",
    "format": "prettier --write src",
    "lint": "eslint src --fix",
    "test": "jest",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run type-check && npm run test && npm run build"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.83.0",
    "mqtt-topping": "4.0.1-beta.0"
  },
  "peerDependencies": {
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@jest/globals": "^30.0.5",
    "@tanstack/eslint-plugin-query": "^5.81.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.15",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "msw": "^2.10.4",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3"
  }
}
