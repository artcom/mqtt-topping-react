{
  "semi": false,
  "printWidth": 80,
  "importOrder": [
    "^@testing-library/jest-dom$",
    "^@testing-library/(.*)$",
    "^react$",
    "^@tanstack/(.*)$",
    "^mqtt-topping$",
    "<THIRD_PARTY_MODULES>",
    "^@/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderGroupNamespaceSpecifiers": true,
  "importOrderParserPlugins": ["typescript", "jsx"],
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "overrides": [
    {
      "files": ["**/*.test.{ts,tsx,js,jsx}", "**/setupTests.{ts,tsx,js,jsx}"],
      "options": {
        "importOrder": [
          "^@testing-library/jest-dom$",
          "^@testing-library/(.*)$",
          "^react$",
          "^@tanstack/(.*)$",
          "^mqtt-topping$",
          "<THIRD_PARTY_MODULES>",
          "^@/(.*)$",
          "^[./]"
        ],
        "importOrderSeparation": true
      }
    }
  ]
}
